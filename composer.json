{
    "name": "norse-blue/xmlify",
    "description": "XML utilities",
    "keywords": ["xml", "utiltiies", "parser", "data", "mapper"],
    "homepage": "https://norse.blue/open-source/xmlify",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/norse-blue/xmlify/issues",
        "source": "https://github.com/norse-blue/xmlify"
    },
    "authors": [
        {
            "name": "Axel Pardemann",
            "email": "axel.pardemann@norse.blue"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": "^7.3",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "myclabs/php-enum": "^1.7",
        "norse-blue/prim": "^0.2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.5",
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "NorseBlue\\Xmlify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NorseBlue\\Xmlify\\Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse --ansi"
        ],
        "check": [
            "composer analyse",
            "composer style-check",
            "composer test"
        ],
        "style-check": [
            "vendor/bin/phpcs"
        ],
        "style-fix": [
            "vendor/bin/phpcbf"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ],
        "test-coverage": [
            "vendor/bin/phpunit --colors=always --coverage-clover=./build/coverage.xml --coverage-html=./build/coverage"
        ]
    }
}
